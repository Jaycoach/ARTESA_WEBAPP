commands:
  01_create_upload_dirs:
    command: "mkdir -p /var/app/current/uploads/client-profiles"
    ignoreErrors: true
  02_set_permissions:
    command: "chmod -R 755 /var/app/current/uploads"
    ignoreErrors: true
  03_create_tmp_dir:
    command: "mkdir -p /var/app/current/tmp"
    ignoreErrors: true
  04_set_tmp_permissions:
    command: "chmod -R 755 /var/app/current/tmp"
    ignoreErrors: true

option_settings:
  aws:elasticbeanstalk:application:environment:
    UPLOADS_DIR: uploads
    TMP_DIR: tmp