files:
  "/etc/nginx/conf.d/gzip.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      gzip on;
      gzip_comp_level 4;
      gzip_types
          text/plain
          text/css
          application/json
          application/javascript
          text/xml
          application/xml
          application/xml+rss
          text/javascript;

commands:
  01_reload_nginx:
    command: "service nginx reload"
    ignoreErrors: true